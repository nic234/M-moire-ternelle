    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '© OpenStreetMap',
      maxZoom: 18
    }).addTo(map);

    L.marker([37.3489, -108.5859]).addTo(map)
      .bindPopup("<b>Michael Moran</b><br>Décédé le 29 nov. 2023");
